<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_loading"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/bg_in_call"
    android:paddingTop="48dp"
    android:clickable="true"
    android:focusable="true">


    <TextView
        android:id="@+id/mSkeletonLoadingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mSkeletonLoading"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:visibility="visible"
        android:text="@string/layout_dialog_loading"
        android:textColor="@color/gray_color_level_1" />

    <com.hiscene.publiclib.widget.loadingView.AVLoadingIndicatorView
        android:id="@+id/mSkeletonLoading"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:visibility="visible"
        app:indicatorColor="#03a4f9" />

</RelativeLayout>
