<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_retry"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/bg_in_call"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/mSkeletonRetry"
        android:layout_width="300dp"
        android:layout_height="216dp"
        android:src="@drawable/skeleton_fail"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/mSkeletonRetryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:text="@string/label_retry_fresh_hint"
        android:textColor="@color/gray_color_level_1" />

</LinearLayout>
