<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_round_rect_comm">
    <TextView
        android:id="@+id/comm_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提示"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:textColor="#333333"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/comm_dialog_content"
        android:layout_width="280dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10dp"
        android:gravity="start"
        android:layout_marginTop="10dp"
        android:minHeight="80dp"
        android:text="内容"
        android:textColor="#333333"
        android:textSize="14sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/comm_dialog_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#333333"
            android:text="取消"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/comm_dialog_divider_line"
            android:layout_width="1dp"
            android:background="#cccccc"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/comm_dialog_confirm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="确定"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textColor="#333333"
            android:textSize="16sp"/>

    </LinearLayout>
</LinearLayout>